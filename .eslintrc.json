{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true
    },
    // "extends": "eslint:recommended",
    "extends": [
        "eslint:recommended"
        // "standard",
        // "htmlacademy/es6"
    ],
    "parser": "@babel/eslint-parser",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            2
        ],
        "semi": [
            "error",
            "never"
        ],
        "quotes": [
            "error",
            "backtick"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ]
    }
}